# Application Port
PORT=3000

# Database Configuration (LibSQL/SQLite)
# Use a file path for SQLite (e.g., file:./database.db) or a LibSQL URL
DATABASE_URL="file:./database.db"

# Redis Configuration (Required for BullMQ/Timetable Sync)
REDIS_URL="redis://localhost:6379"

# Better Auth Configuration
# Generate a secret with `openssl rand -base64 32`
BETTER_AUTH_SECRET="change_me_super_secret_better_auth_key_here"
BETTER_AUTH_URL="http://localhost:3000"

# Frontend Configuration
# URL where the frontend is accessible (for OAuth redirects)
FRONTEND_URL="http://localhost:3000"

# Email Configuration (SMTP)
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_SECURE="false"
SMTP_USER="user"
SMTP_PASS="pass"
EMAIL_FROM='"StudentSphere" <noreply@studentsphere.com>'

# Encryption Key (Must be exactly 32 characters)
# Generate with `openssl rand -hex 16`
ENCRYPTION_KEY="12345678901234567890123456789012"
